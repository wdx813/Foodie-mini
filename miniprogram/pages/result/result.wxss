/* pages/result/result.wxss */
.result-info {
    width: 500rpx;
    height: 450rpx;
    background-color: rgba(1, 1, 1, 0.5);
    position: fixed;
    top: 20%;
    left: 125rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    border-radius: 4px;
}

.nickname {
    width: 100%;
    height: 80rpx;
    color: #F7818F;
    text-align: center;
}

.info {
    width: 100%;
    margin: 25rpx auto;
    text-align: center;
}

.option-box {
    width: 100%;
    height: 200rpx;
    background-color: rgba(1, 1, 1, 0.5);
    display: flex;
    justify-content: space-evenly;
    color: #fff;
    position: fixed;
    bottom: 0;
}

.option-item {
    width: 30%;
    height: 150rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    font-size: 28rpx;
}

.option-name {
    margin-top: 10rpx;
}

.option-middle {
    width: 40%;
}

.icon-share {
    width: 50rpx;
    height: 48rpx;
}

.icon-repeat {
    width: 50rpx;
    height: 56rpx;
}

.icon-circle {
    width: 50rpx;
    height: 50rpx;
}