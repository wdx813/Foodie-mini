/* pages/list/list.wxss */

.list-container {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0px;
    left: 0px;
    display: flex;
    flex-direction: column-reverse;
}

.list-box {
    display: flex;
    align-items: flex-end;
    width: 100%;
    height: 100%;
}

.list-left {
    width: 70%;
    height: 100%;
    background-color: rgba(1, 1, 1, 0.5);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.list-right {
    width: 30%;
    height: 90%;
}


.tip {
    width: 100%;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    margin-bottom: 20rpx;
}

.scroll-left {
    width: 100%;
    height: 78%;
}

.list {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
}

.list-item{
    width: 50%;
    height: 240rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    position: relative;
}

.foodImg {
    width: 180rpx;
    height: 180rpx;
}

.icon-selected {
    width: 124rpx;
    height: 92rpx;
    position: absolute;
    top: 30rpx;
}

.foodName {
    width: 180rpx;
    height: 30rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    margin-top: 10rpx;
    overflow: hidden;
}

.btn-submit {
    width: 280rpx;
    height: 80rpx;
    border: 2px solid #fff;
    color: #fff;
    background-color: #F7818F;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 40rpx auto;
}

.scroll-right {
    width: 100%;
    height: 90%;
    padding: 15rpx 0;
}

.province-list {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.province {
    color: #fff;
    width: 138rpx;
    height: 52rpx;
    border: 1px solid #fff;
    background-color: rgba(0, 0, 0, 0);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 15rpx auto;
    border-radius: 4rpx;
}

.province-selected {
    background-color: #F7818F;
}